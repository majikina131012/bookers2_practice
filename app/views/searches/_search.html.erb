<%= form_with url: search_path, local: true, method: :get do |f| %>
  <%= f.text_field :content, :placeholder =>"本のタイトルやユーザー名" %>
  <%= f.select :model, options_for_select({ "本" => "book", "ユーザー" => "user" }) %>
  <%= f.select :method, options_for_select({ "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
  <%= f.submit 'Search', class: "btn btn-primary" %>
<% end %>